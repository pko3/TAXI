<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "sk.datastream.taxi"
        versionCode = "508"
        version     = "1.5.08">
 
    <name>TAXI Driver</name>
  
    <description>
        TAXI Driver application
    </description>

  <author href="http://www.datastream.sk" email="info@datastream.sk">
    DataStream
  </author>
  <icon src="img/phoneicon.png" />

  <icon src="img/phoneicon57.png"          gap:platform="ios" width="57"  height="57"  />
  <icon src="img/phoneicon72.png"       gap:platform="ios" width="72"  height="72"  />
  <icon src="img/phoneicon120.png"       gap:platform="ios" width="120"  height="120"  />
  <icon src="img/phoneicon152.png"       gap:platform="ios" width="152"  height="152"  />
  <icon src="img/phoneicon76.png"       gap:platform="ios" width="76"  height="76"  />

  <preference name="load-url-timeout" value="60000" />
  <preference name="phonegap-version" value="cli-6.5.0" />
  <preference name="DisallowOverscroll" value="true" />
  <preference name="exit-on-suspend" value="false" />
  <preference name="KeepRunning " value="true" />
  <preference name="Fullscreen" value="true" />
  <preference name="loadingDialog" value="Driver, Starting" />
  <preference name="AndroidPersistentFileLocation" value="Compatibility" />

  <access origin="*" />

  <plugin name="cordova-plugin-media" spec="*" />
  <plugin name="cordova-plugin-geolocation" spec="*"/>
  <plugin name="cordova-plugin-inappbrowser" spec="*" />

  <plugin name="de.appplant.cordova.plugin.local-notification" spec="*" />
  <plugin name="uk.co.workingedge.phonegap.plugin.launchnavigator" spec="*" />

  <feature name="http://api.phonegap.com/1.0/geolocation"/>
  <feature name="http://api.phonegap.com/1.0/network"/>
</widget>
